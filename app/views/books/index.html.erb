<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span>
  <%= book.title %>
</span>

<p>Body</p>
<span><%= book.body %></span>

<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>


<!--↓新規投稿フォーム-->
<h1>New book</h1>

<%= form_with model: @books,url: '/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'CreateBook' %>

<% end %>
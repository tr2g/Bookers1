<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error!
  <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %> ï½œ <%= link_to "Back", books_path %></p>